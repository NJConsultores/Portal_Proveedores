@font-face {
    font-family: 'Open Sans';
    src: url("../resources/css/fonts/OpenSans-Regular.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
}

html {

    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    margin: 0 !important; padding: 0 !important;
}

.centered {
    margin: 0 auto;
    text-align: left;
    width: 750px;
    margin-top: 7%;
    padding-bottom: 30px;
    /*    padding-right: 20px;
        padding-left: 20px;*/
    /*margin-left:16%;*/
    background-color: #FFF !important;
    /*    padding: 35px 30px 10px;*/
    margin-bottom: 1em;
    background-color: #fff;
    border: 1px solid #ddd;
    border-top-right-radius: 4px;
    border-top-left-radius: 4px;
    border-bottom-right-radius: 4px;
    border-bottom-left-radius: 4px;
}

@media screen and (min-width: 0px) and (max-width: 480px) {
    #imgApp { display: none; }  
    #panel{ width: 380px !important;}
}

@media screen and (min-width: 481px) and (max-width: 768px) {
    #panel{ width: 680px !important;}
}

body {

    font-family:'Open Sans',sans-serif !important;
    background-color: #F2F2F2 !important;

    margin: 0 !important; padding: 0 !important;
    text-align: center; /* !!! */
}

.centeredDiv { margin-right: auto; margin-left: auto; width: 800px; }
.titulo{
    font-family:'Open Sans',sans-serif !important;
    font-size: 32px;

}

.camposTexto{
    font-family:Verndana,Arial,sans-serif !important;
    width: 302px;
    height: 29px;
	font-size: 12px;
}


.login{
    color: #ffffff !important;
    background-color: #004078 !important;
    /*background-color: #34495e !important;*/
    border-color: #004078 !important;
    /*    font-size: 19px !important;*/
    line-height: 1.33 !important;
    border-radius: 6px !important;
    margin-bottom: 0 !important;
    font-weight: normal !important;
    text-align: center !important;
    vertical-align: middle !important;
}


.button{
    background-color: #283f69 !important;
    border:1px solid #283f69;
    cursor:pointer;
    color:#FFF;
    font-family:'Open Sans',sans-serif !important;
    /*font-size:19px;*/
    padding: 4px 40px;
    margin:5px 5px;
    min-width:100px;
    text-shadow:0 1px 1px #000000;
    -moz-box-shadow:1px 1px 1px #A7A7A7;
    -moz-border-radius:5px;
    -webkit-box-shadow:1px 1px 1px #A7A7A7;
    -webkit-border-radius:5px;
}
